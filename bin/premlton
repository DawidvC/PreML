#!/bin/bash
hash preml 2>&- || { echo >&2 "PreML is not installed.  Aborting."; exit 1; }
hash mlton 2>&- || { echo >&2 "MLTon is not installed.  Aborting."; exit 1; }

if [ ${#@} -gt 0 ]; then
    SRC=${@:${#@}}
    DST="$SRC.premlton.mlb"
    preml $SRC -o $DST
    echo $SRC $DST
    mlton "$@".premlton.mlb
    preml $SRC -o $DST -c
else
    echo "Usage: $0 <file>"
fi

